(setq package-list '(auto-complete dash evil go-autocomplete go-complete go-dlv go-errcheck go-mode go-play go-snippets goto-chg popup undo-tree yasnippet centered-cursor-mode evil-escape company company-go zenburn-theme cyberpunkt-theme monokai-theme monochrome-theme gruvbox-theme solarized-theme occidental-theme))

; list the repositories containing them
(setq package-archives '(("gnu" . "http://elpa.gnu.org/packages/")
                         ("marmalade" . "http://marmalade-repo.org/packages/")
                         ("melpa" . "http://melpa.milkbox.net/packages/")))


; activate all the packages (in particular autoloads)
(package-initialize)

; fetch the list of packages available 
(unless package-archive-contents
  (package-refresh-contents))

; install the missing packages
(dolist (package package-list)
  (unless (package-installed-p package)
    (package-install package)))
